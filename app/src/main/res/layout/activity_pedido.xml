<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pedido"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/delivery_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo de Entrega."
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="35dp">
    </TextView>

    <ImageView
        android:id="@+id/crono_view"
        android:layout_width="1.5in"
        android:layout_height="1.5in"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/delivery_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="28dp">
    </ImageView>

    <TextView
        android:id="@+id/thing_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestra prioridad es facilitarle a nuestros clientes la opcion de realizar pedidos desde la comodidad de su hogar."
        android:padding="12sp"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/crono_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
    </TextView>

    <ImageView
        android:id="@+id/deliveyvehicle_view"
        android:layout_width="1.9in"
        android:layout_height="1.43in"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/thing_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp">
    </ImageView>







</androidx.constraintlayout.widget.ConstraintLayout>