<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:viewBindingIgnore="false"
    >
<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="hola mundo"-->
<!--        android:id="@+id/holaMundo"-->
<!--        />-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sucursal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="10dp"
            android:id="@+id/text_zone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:textColor="#FDAF01"
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:paddingStart="10dp"
                android:id="@+id/text_sucursal"

                tools:ignore="RtlSymmetry" />
        </androidx.cardview.widget.CardView>
        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"
            android:src="@drawable/confirmar"
            android:background="@drawable/borde_final"

            android:id="@+id/selecting_zone"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>